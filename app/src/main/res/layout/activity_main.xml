<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/backg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#18152a"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="12dp" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/titlepicture" />

        <TextView
            android:id="@+id/judge"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Picker: P1"
            android:textColor="#e71c30"
            android:textSize="25dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/gotit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:onClick="timer"
            android:text="TIMER"
            android:textColor="#cd59a2"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prompt"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="#0c9cd9"
            android:gravity="center"
            android:paddingHorizontal="3dp"
            android:text="A line that's sarcastic when you replace a name with &quot;Captain Obvious&quot;"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="26dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="125dp"
                android:layout_height="37.5dp"
                android:layout_marginRight="25dp"
                android:background="#f9c50f"
                android:onClick="reset"
                android:text="Reset" />

            <Button
                android:layout_width="125dp"
                android:layout_height="37.5dp"
                android:layout_marginLeft="25dp"
                android:background="#f9c50f"
                android:onClick="toInstructions"
                android:text="Instructions" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="125dp"
                android:layout_height="37.5dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="25dp"
                android:background="#f9c50f"
                android:onClick="pop"
                android:text="New Card" />

            <Button
                android:layout_width="125dp"
                android:layout_height="37.5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="60dp"
                android:background="#f9c50f"
                android:onClick="nextturn"
                android:text="Next Turn" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p1"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="7dp"
                android:background="#0c9cd9"
                android:gravity="center"
                android:onClick="p1click"
                android:padding="6dp"
                android:text="P1:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/p2"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="#0c9cd9"
                android:gravity="center"
                android:onClick="p2click"
                android:padding="6dp"
                android:text="P2:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/p3"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="#0c9cd9"
                android:gravity="center"
                android:onClick="p3click"
                android:padding="6dp"
                android:text="P3:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/p4"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp"
                android:background="#0c9cd9"
                android:gravity="center"
                android:onClick="p4click"
                android:padding="6dp"
                android:text="P4:"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
